.wrapper
  .header
    = render './devise/shared/top-header'
.exhibition 
  .exhibition__container 
    .exhibition__container__sell
      %h2 商品の情報を入力
      = form_for @good do |f|
        .upload-box
          .upload-box__head
            %h3.bigger 出品画像
            %span 必須
          %p.discription 最大5枚までアップロードできます

          -# ここからが複数画像出品の部分です
          .post__drop__box__container
            .prev-content
            .label-content
              %label{for: "good_photos_attributes_0_image", class: "label-box", id: "label-box--0"}
                %pre.label-box__text-visible クリックしてファイルをアップロード
            .hidden-content
              = f.fields_for :photos do |p|
                = p.file_field :image, class: "hidden-field" , type: 'file' , value:""
                %input{class:"hidden-field", type: "file", name: "good[photos_attributes][1][image]", id: "good_photos_attributes_1_image" }
                %input{class:"hidden-field", type: "file", name: "good[photos_attributes][2][image]", id: "good_photos_attributes_2_image" }
                %input{class:"hidden-field", type: "file", name: "good[photos_attributes][3][image]", id: "good_photos_attributes_3_image" }
                %input{class:"hidden-field", type: "file", name: "good[photos_attributes][4][image]", id: "good_photos_attributes_4_image" }
                -# ⬆︎インプットタグが4つしか無いですがfile_fieldのデフォルトで計5つになります
                  <input>とは、<form>タグで作成したフォームの中でテキスト入力欄やボタンなどの部品を作成する要素です。
                  部品はtype属性の値に指定することが可能で、一行テキストボックス、チェックボックス、ラジオボタン、実行ボタン、リセットボタンなどの部品を作成することができます。
          -# 複数画像出品終わり

        .upload-box
          .upload-box__head
            %h3.smaller 商品名
            %span 必須
          .upload-box__input
            .upload-box__input__text
              = f.text_field :name, class: "upload-box__input__text__name", placeholder: "商品名 (必須 40文字まで)"
          
          .upload-box__head
            %h3.smaller 商品説明
            %span 必須
          .upload-box__input
            .upload-box__input__text
              = f.text_area :discription, class: "upload-box__input__text__explain", placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", rows: 5

        .upload-box.clearfix
          %h3.sub-head
            商品の詳細
          .upload-box__subcontainer
            .upload-box__head
              %h3.smaller カテゴリー
              %span 必須
            .upload-box__input
              .upload-box__input__select-category
                .parents
                  = f.select :category, @category_parent_array, {prompt: "--"}, {class: 'category', id: 'parent_category'}
                .children
                .grandchildren
            .append-box
            .upload-box__head.upload-box__condition
              %h3.smaller 商品の状態
              %span 必須
            .upload-box__input
              .upload-box__input__select
                = f.select :condition, [["新品未使用", "新品未使用"], ["新品に近い", "新品に近い"]], {prompt: "--"}
        .upload-box.clearfix
          %h3.sub-head
            発送について
          .upload-box__subcontainer
            .upload-box__head
              %h3.smaller 配送料の負担
              %span 必須
            .upload-box__input
              .upload-box__input__select
                = f.select :delivery_type, [["送料込み", "送料込み"], ["着払い", "着払い"]], {prompt: "--"}, {class: 'charge'}
            
            .upload-box__head
              %h3.smaller 発送元の地域
              %span 必須
            .upload-box__input
              .upload-box__input__select
                = f.select :prefecture, [["東京都", "東京都"], ["大阪府", "大阪府"]], {prompt: "--"}, {class: 'place'}
            .upload-box__head
              %h3.smaller 発送までの日数
              %span 必須
            .upload-box__input
              .upload-box__input__select
                = f.select :day, [["1~2日で発送", "1~2日で発送"], ["2~3日で発送", "2~3日で発送"]], {prompt: "--"}
        .upload-box.clearfix
          %h3.sub-head
            販売価格(300~9,999,999)
          .upload-box__subcontainer.price
            .upload-box__subcontainer__subinner
              .upload-box__head.price-head
                %h3.smaller 価格
                %span 必須
              .upload-box__input
                .upload-box__input__fee
                  %p ¥
                  = f.text_field :fee, placeholder: "例) 300"
          .upload-box__subcontainer.tax
            .upload-box__subcontainer__subinner
              .upload-box__head
                %h3.sub 販売手数料(10%)
              %p -             
          .upload-box__subcontainer.tax
            .upload-box__subcontainer__subinner
              .upload-box__head.profit-head
                %h3 販売利益
              %p.profit-hyphen -
        
        .upload-box
          .upload-box__attention
            %p
              = link_to "禁止されている出品", "#"
              、
              = link_to "行為", "#"
              を必ずご確認ください。
            %p 
              またブランド品でシリアルナンバー等がある場合はご記載ください。
              = link_to "偽ブランドの販売", "#"
            %p
              は犯罪であり処罰される可能性があります。
            %p
              また、出品をもちまして
              = link_to "加盟店規約", "#"
              に同意したことになります。
            = f.submit '出品する', class: "submit-btn"
            = link_to "もどる", "#", class: "gray-btn"

.top-footer
  = render './devise/shared/top-footer'