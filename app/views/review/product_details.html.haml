.wrapper
  .main__header
    = render "main_header"

  .item-container
    %h1.item-container__item-name
      アイテム名
    .item-container__content
      .item-container__content__photo
        = image_tag "sample.jpg", size: "300x300", class: "logo"
        .item-container__content__photo__child
          = image_tag "sample.jpg", size: "70x90", class: "logo"
      
      %table.item-container__content__details
        %tbody
          %tr
            %th 出品者
            %td
              = link_to "ユーザーネーム", "#"
              %div
                .item-user-ratings
                  = fa_icon 'smile-o', class: "icon-good"
                  %span 31
                .item-user-ratings
                  = fa_icon 'meh-o', class: "icon-good"
                  %span 1
                .item-user-ratings
                  = fa_icon 'meh-o', class: "icon-good"
                  %span 0
          %tr
            %th カテゴリー
            %td
              = link_to "メンズ", "#"
              = link_to "小物", "#"
              = link_to "本", "#"
          %tr
            %th ブランド
            %td
          %tr
            %th 商品の状態
            %td 目立った傷や汚れなし
          %tr
            %th 配送料の負担
            %td 送料込み（出品者負担）
          %tr
            %th 配送の方法
            %td 未定
          %tr
            %th 配送元の地域
            %td
              = link_to "大阪府"
          %tr
            %th 発送日の目安
            %td 1〜2日で発送

    .item-container__price.text-center
      %span.item-container__price__box ¥1,500
      %span.item-container__price__tax （税込）
      %span.item-container__price__shipping 送料込み
    .text-center
      .sales-point-message
        P2,000をお持ちです
    .item-container__buy-btn
      = link_to "購入画面に進む", "#"

    .item-container__description
      %p.item-container__description__inner
        Ruby on Railsの基礎から応用までを学べる一冊。
        %br状態
        汚れや折れなし
    .item-container__button
      .item-container__button__left
        %button.item-container__button__left__box.item-button-like
          = fa_icon "heart-o"
          %span いいね!
          %span 3
        .item-container__button__left__box.item-button-report
          = fa_icon "flag"
          = link_to "不適切な商品の報告"
      .item-container__button__right
        = fa_icon "lock"
        = link_to "あんしん・あんぜんへの取り組み"

  .item-message
    .item-message__container
      .item-message__container__content
        %ul.message-contents
          %li.clearfix
            .message-user
              %figure
                = image_tag "/no.png", class: "message-user-icon"
            .message-body
              .message-body__text
                値下げして〜
              .message-body__time
                %time.message-body__time__day-before
                = fa_icon "clock-o"
                %span 1日前
            .icon-balloon
          %li.clearfix
            .message-user
              %figure
                = image_tag "/no.png", class: "message-user-icon"
            .message-body
              .message-body__text
                やだよ
              .message-body__time
                %time.message-body__time__day-before
                = fa_icon "clock-o"
                %span 1日前
      .item-message__container__content
        %p 相手のことを考え丁寧なコメントを心がけましょう。不快な言葉遣いなどは利用制限や退会処分となることがあります。
        %textarea.textarea-default
        %button.message-submit-btn
          %span コメントする


  %ul.item-link.clearfix
    %li.item-link__prev
      = fa_icon "chevron-left", class: "arrow"
      = link_to "PHP", "#"
    %li.item-link__next
      = link_to "HTML", "#"
      = fa_icon "chevron-right", class: "arrow"

  .item-sns
    %ul.item-sns__box
      %li
        = fa_icon "facebook-square", class: "sns-icon"
      %li
        = fa_icon "twitter-square", class: "sns-icon"
      %li
        = fa_icon "address-book", class: "sns-icon"
      %li
        = fa_icon "paypal", class: "sns-icon"

  .relation-item
    .relation-item__exhibitions
      .relation-item__exhibitions__title
        %h1 その他の出品
      .relation-item__exhibitions__image
        .relation-item__exhibitions__image__box
          .relation-item__exhibitions__image__box__top-image
            =image_tag "sample.jpg", size: "220x220"
          .relation-item__exhibitions__image__box__under-text
            %span サンプル

    .relation-item__exhibitions
      .relation-item__exhibitions__title
        %h1 その他の商品
        .relation-item__exhibitions__image
          .relation-item__exhibitions__image__box
            .relation-item__exhibitions__image__box__top-image
              =image_tag "sample.jpg", size: "220x220"
            .relation-item__exhibitions__image__box__under-text
              %span サンプル
      














  = render "review/footer"