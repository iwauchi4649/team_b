.wrapper
  .header
    = render 'top-header'
.exhibition 
  .exhibition__container 
    .exhibition__container__sell
      %h2 商品の情報を入力
      %form
        .upload-box
          .upload-box__head
            %h3.bigger 出品画像
            %span 必須
          %p.discription 最大10枚までアップロードできます
          .upload-box__input
            .upload-box__input__img
              %pre
                = preserve do
                  :escaped
                    ドラッグアンドドロップ
                    またはクリックしてファイルをアップロード
        .upload-box
          .upload-box__head
            %h3.smaller 商品名
            %span 必須
          .upload-box__input
            .upload-box__input__text
              %input.upload-box__input__text__name{type: "text", placeholder: "商品名 (必須 40文字まで)"}
          
          .upload-box__head
            %h3.smaller 商品説明
            %span 必須
          .upload-box__input
            .upload-box__input__text
              %textarea.upload-box__input__text__explain{type: "text", placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", rows: 5}

        .upload-box.clearfix
          %h3.sub-head
            商品の詳細
          .upload-box__subcontainer
            .upload-box__head
              %h3.smaller カテゴリー
              %span 必須
            .upload-box__input
              .upload-box__input__select
                %select.category
                  %option{value:  "0"} --
                  %option{value:  "1"} レディース
                  %option{value:  "2"} メンズ
            
            .upload-box__head
              %h3.smaller 商品の状態
              %span 必須
            .upload-box__input
              .upload-box__input__select
                %select
                  %option{value:  "0"} --
                  %option{value:  "1"} 新品、未使用
                  %option{value:  "2"} 未使用に近い
        .upload-box.clearfix
          %h3.sub-head
            発送について
          .upload-box__subcontainer
            .upload-box__head
              %h3.smaller 配送料の負担
              %span 必須
            .upload-box__input
              .upload-box__input__select
                %select.charge
                  %option{value:  "0"} --
                  %option{value:  "1"} 送料込み(出品者負担)
                  %option{value:  "2"} 着払い(購入者負担)
            
            .upload-box__head
              %h3.smaller 発送元の地域
              %span 必須
            .upload-box__input
              .upload-box__input__select
                %select.place
                  %option{value:  "0"} --
                  %option{value:  "1"} 東京都
                  %option{value:  "2"} 大阪府
            .upload-box__head
              %h3.smaller 発送までの日数
              %span 必須
            .upload-box__input
              .upload-box__input__select
                %select
                  %option{value:  "0"} --
                  %option{value:  "1"} 1~2日で発送
                  %option{value:  "2"} 2~3日で発送
        .upload-box.clearfix
          %h3.sub-head
            販売価格(300~9,999,999)
          .upload-box__subcontainer.price
            .upload-box__subcontainer__subinner
              .upload-box__head.price-head
                %h3.smaller 価格
                %span 必須
              .upload-box__input
                .upload-box__input__fee
                  %p ¥
                  %input{type: "text", placeholder: "例) 300"}
          .upload-box__subcontainer.tax
            .upload-box__subcontainer__subinner
              .upload-box__head
                %h3.sub 販売手数料(10%)
              %p -             
          .upload-box__subcontainer.tax
            .upload-box__subcontainer__subinner
              .upload-box__head.profit-head
                %h3 販売利益
              %p.profit-hyphen -
        
        .upload-box
          .upload-box__attention
            %p
              = link_to "禁止されている出品", "#"
              、
              = link_to "行為", "#"
              を必ずご確認ください。
            %p 
              またブランド品でシリアルナンバー等がある場合はご記載ください。
              = link_to "偽ブランドの販売", "#"
            %p
              は犯罪であり処罰される可能性があります。
            %p
              また、出品をもちまして
              = link_to "加盟店規約", "#"
              に同意したことになります。
            %button 出品する
            = link_to "もどる", "#", class: "gray-btn"
.top-footer
  = render 'top-footer'



          

