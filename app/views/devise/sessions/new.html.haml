.wrapper
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .header
      = render './devise/shared/top-header'
      .header__signup-bar

    .main
      .main__container-login
        .main__container-login__head
          %p.main__container-login__head__text
            アカウントをお持ちでない方はこちら
          = link_to new_top_path do
            %p.main__container-login__head__btn
              新規会員登録

        .main__container-login__content
          %p.btn-default.btn-facebook Facebookでログイン
          = fa_icon 'facebook-square', class: 'icon-facebook'
          %p.btn-default.btn-google Googleでログイン
          = fa_icon 'google', class: 'icon-google'

        .main__container-login__form
          .main__container-login__form__inner
            .form-group
              = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "login-input-form"
              %ul.error
                %li 入力してください
            .form-group
              = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class:"login-input-form"
              %ul.error
                %li 入力してください
                %li 6文字以上128文字以下で入力してください
            .form-group
              .recaptcha
            = f.submit "ログイン", class: "btn-default btn-login"
    .top-footer
      = render './devise/shared/top-footer'